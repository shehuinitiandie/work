/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}
#banner image{
  width: 120%;
  height: 100%;
  display: block;
}
#banner{
  height: 280rpx;
}
.list_wrap{
  width:100%;
  height: 160rpx;
  /* background: pink; */
  box-shadow: 0rpx 1rpx 1rpx #888;
}
.list_wrap view{
  float: left;
}
.list_wrap .list_l{
  width: 160rpx;
  height: 140rpx;
  /* background: orange; */
  padding-left: 55rpx;
  padding: 10rpx 0px;
}
.list_wrap .list_c{
  width: 380rpx;
  height: 160rpx;
  /* background: skyblue; */
  padding-left: 50rpx;
}
.list_wrap .list_r{
  width: 160rpx;
  height: 160rpx;
  /* background: khaki; */
}
.list_l image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 23rpx;
}
.list_c view{
   width:300rpx;
   padding-left: 60rpx;
   white-space: nowrap;
   overflow: hidden;
   test-overflow: ellipsis;

  }
.list_c .musicName{
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.list_c .name{
  font-size: 26rpx;
  color: #888888;
}
.list_r image{
  width: 160rpx;
  height: 160rpx;
}